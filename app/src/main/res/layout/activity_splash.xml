<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_blue"
    tools:context=".SplashActivity">


    <ImageView
        android:id="@+id/sun"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:src="@drawable/sun"
        android:layout_centerHorizontal="true"
        android:elevation="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_100sdp"/>

    <TextView
        android:id="@+id/logo_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weathery"
        android:textColor="@color/white"
        android:textSize="@dimen/_25ssp"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_below="@+id/sun"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_bold"/>

    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/know_how_you_feel_from_outside"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_below="@+id/logo_txt"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_medium"/>

    <ImageView
        android:id="@+id/cloud1"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_80sdp"
        android:src="@drawable/white_cloud_big"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_70sdp"
        android:layout_marginStart="@dimen/_20sdp"/>

    <ImageView
        android:id="@+id/cloud2"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/white_cloud_big"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_30sdp"/>

    <ImageView
        android:id="@+id/cloud3"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/white_cloud_big"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_10sdp"/>

</RelativeLayout>